<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Buses</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700|Roboto+Slab:100,300,400,700" rel="stylesheet"
        type="text/css">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.js"></script>
</head>

<body class="bg">
    <nav>
        <div class="header-content">
            <div id="bus-stop-name"></div>
            <div id="weather-tomorrow"></div>
            <div id="weather-today"></div>
            <div id="current-time"></div>
        </div>
    </nav>
    <div class="container">
        <div id="mk" class="facility">
            <div class="tile-content">
                <div class="park-name">Magic Kingdom</div>
                <div class="park-hours"></div>
                <div class="bus-time"></div>
            </div>
        </div>
        <div id="ep" class="facility">
            <div class="tile-content">
                <div class="park-name">Epcot</div>
                <div class="park-hours"></div>
                <div class="bus-time"></div>
            </div>
        </div>
        <div id="hs" class="facility">
            <div class="tile-content">
                <div class="park-name">Hollywood Studios</div>
                <div class="park-hours"></div>
                <div class="bus-time"></div>
            </div>
        </div>
        <div id="ak" class="facility">
            <div class="tile-content">
                <div class="park-name">Animal Kingdom</div>
                <div class="park-hours"></div>
                <div class="bus-time"></div>
            </div>
        </div>
        <div id="ds" class="facility">
            <div class="tile-content">
                <div class="park-name">Disney Springs</div>
                <div class="park-hours"></div>
                <div class="bus-time"></div>
            </div>
        </div>
        <div id="tl" class="facility">
            <div class="tile-content">
                <div class="park-name">Typhoon Lagoon</div>
                <div class="park-hours"></div>
                <div class="bus-time"></div>
            </div>
        </div>
        <div id="bb" class="facility">
            <div class="tile-content">
                <div class="park-name">Blizzard Beach</div>
                <div class="park-hours"></div>
                <div class="bus-time"></div>
            </div>
        </div>
    </div>
    <script src="/static/js/buses.js"></script>
    <script>
        Buses.Initialize('<%=destination%>', <%=resortId%>, <%=busStopId%>,
            '<%=timeZoneApiKey%>', <%=latitude%>, <%=longitude%>);
    </script>
</body>

</html>